<Window x:Class="DiamondShopSystem.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiamondShopSystem.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        <Menu Height="30" Name="menu1" Margin="0,0,0,0" VerticalAlignment="Top" BorderThickness="2" FontSize="16" FontWeight="Bold">
            <MenuItem Header="Menu" IsCheckable="False" FontSize="16">
                <MenuItem Header="Product" IsCheckable="False" FontSize="12" Click="Open_wProduct_Click"/>
                <MenuItem Header="Order" IsCheckable="False" FontSize="12" Click="Open_wOrder_Click"/>
                <MenuItem Header="Customer" IsCheckable="False" FontSize="12" Click="Open_wCustomer_Click"/>
                <MenuItem Header="DiamondSetting" IsCheckable="False" FontSize="12" Click="Open_wDiamondSetting_Click"/>
                <MenuItem Header="MainDiamond" IsCheckable="False" FontSize="12" Click="Open_wMainDiamond_Click"/>
                <MenuItem Header="SideStone" IsCheckable="False" FontSize="12" Click="Open_wSideStone_Click"/>


            </MenuItem>

        </Menu>
    </Grid>
</Window>
