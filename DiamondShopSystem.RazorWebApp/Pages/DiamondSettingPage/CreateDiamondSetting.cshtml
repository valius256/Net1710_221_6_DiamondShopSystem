@model DiamondShopSystem.RazorWebApp.Pages.DiamondSettingPage.CreateModel

<h2>Create Diamond Setting</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="DiamondSetting.Name" class="control-label"></label>
        <input asp-for="DiamondSetting.Name" class="form-control" />
        <span asp-validation-for="DiamondSetting.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DiamondSetting.DiamondSettingCategory" class="control-label"></label>
        <input asp-for="DiamondSetting.DiamondSettingCategory" class="form-control" />
        <span asp-validation-for="DiamondSetting.DiamondSettingCategory" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DiamondSetting.Description" class="control-label"></label>
        <textarea asp-for="DiamondSetting.Description" class="form-control"></textarea>
        <span asp-validation-for="DiamondSetting.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DiamondSetting.Price" class="control-label"></label>
        <input asp-for="DiamondSetting.Price" class="form-control" />
        <span asp-validation-for="DiamondSetting.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DiamondSetting.Image" class="control-label"></label>
        <input asp-for="DiamondSetting.Image" class="form-control" />
        <span asp-validation-for="DiamondSetting.Image" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div>
